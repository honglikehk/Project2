<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script src="/js/cookie.js"></script>



<script>
  $(document).ready(function () {
      var x = getCookie("orderList");
      if (x != '') {
        $("#orderList").html(x.replace(/xxxx/g, "<br>"))
      }
    });
 
  $("body").on("click", "button[name=add]", function () {
    
      if ($("#orderList").text() == '') {
        $("#orderList").html($(this).val())
        setCookie("orderList", $(this).val(), 1)  
    } else {
        $("#orderList").append("<br/>")  
        $("#orderList").append($(this).val())
        setCookie("orderList", $("#orderList").html(), 1)
    }
   
  })
  // Delete order button //
  $("body").on("click", "button[name=delete]", function () {
    $("#orderList").html(getCookie("orderList").replace($(this).val(), ''))
    setCookie("orderList", $("#orderList").html(), 1)
  })

</script>