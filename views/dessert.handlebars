<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script src="/js/cookie.js"></script>

<script>
    $(document).ready(function () {
        // Show order list on each page //
        var x = getCookie("orderList");
        if (x != '') {
            $("#orderList").html(x.replace(/xxxx/g, "<br>"))
        };
    });

    // Add order button //
    $("body").on("click", "button[name=add]", function () {

        if ($("#orderList").text() == '') {
            $("#orderList").html($(this).val())
            $("#orderList").append("<br/>")
            setCookie("orderList", $(this).val(), 1)
        } else {

            $("#orderList").append($(this).val())
            $("#orderList").append("<br/>")
            setCookie("orderList", $("#orderList").html(), 1)
        };
    });

    // Delete order button //
    $("body").on("click", "button[name=delete]", function () {

        //alert(getCookie("orderList"))
        $("#orderList").text(getCookie("orderList").replace($(this).val(), ''))
        //alert($("#orderList").text())
        $("#orderList").html($("#orderList").text().replace("<br>", ''))
        // alert($("#orderList").text())
        setCookie("orderList", $("#orderList").html(), 1)
    })

</script>